{
  "name": "YouTube Shortcuts",
  "version": "0.0.1",
  "description": "Additional shortcuts for YouTube",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["js/background.js", "js/common/constants/commands.js"],
    "persistent": false
  },
  "commands": {
    "playback_speed_normal": {
      "description": "Set to the playback speed 'Normal'",
      "suggested_key": {
        "default": "Alt+0"
      }
    },
    "playback_speed_2": {
      "description": "Set to the playback speed '2'",
      "suggested_key": {
        "default": "Alt+2"
      }
    },
    "go home": {
        "description": "Go to YouTube's home page",
      "suggested_key": {
        "default": "Alt+H"
      }
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
